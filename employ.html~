<script>

mydisplay();
function mydisplay(){
var email = localStorage.getItem("email");
var password = localStorage.getItem("password");
if(email==null)
{
window.location="myassign.html";
}
var arr3 = JSON.parse(localStorage.getItem("arr"));

//alert(username);
//alert(arr3[0].fname);
//document.write(arr3[0].fname);
//document.write(password);
//alert(arr3[0].fname +" username: "+username);
var i;
for(i=0; i< arr3.length; i++)
{	//alert(arr3[i].fname +" "+username)

	if(arr3[i].email==email && arr3[i].id==password)
	{
	
		document.getElementById("inmyid").innerHTML+="Name : "+arr3[i].fname +"<br> Salary : Rs."+arr3[i].salary+ "<br>Remark by HR : "+arr3[i].comment;
		//alert(arr3[i].fname +" "+arr3[i].salary+" "+arr3[i].comment);
		
		break;
	}
}
}

function logout()
{
window.location="myassign.html";
}
</script>



